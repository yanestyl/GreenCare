<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        style="@style/ScreenBackground">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Добро пожаловать в"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewWelcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewAppName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Мониторинг Зеленых Насаждений"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textViewAppDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="@string/app_description"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewProcessedRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewAppDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:background="#E8F5E9"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnLeaveRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProcessedRequests"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:text="Оставить заявку"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="4dp"  />

        <Button
            android:id="@+id/btnFAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLeaveRequest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Как оставить заявку"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#4CAF50"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:elevation="4dp" />


    </RelativeLayout>

</FrameLayout>