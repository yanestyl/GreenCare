<resources>
    <!-- Base application theme -->
    <style name="Theme.Diplom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryVariant">#5F6853</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#C9C0BB</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScreenBackgroundLogin"><item name="android:background">@drawable/login_background_night</item></style>

    <style name="Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/black</item></style>
    <style name="CardBackground"><item name="android:background">@color/darkGrey</item></style>
    <style name="TextColor"><item name="android:textColor">@color/grey</item></style>
    <style name="ImageChange"><item name="android:src">@drawable/icon</item></style>

</resources>
